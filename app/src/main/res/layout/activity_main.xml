<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorThree"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".MainActivity" >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate_your"
            android:layout_marginTop="32dp"
            android:textSize="24sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/colorOne"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorFour"
            android:textSize="24sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/colorOne"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_minutes"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:textSize="24sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/colorOne"/>

<!--Divider-->
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorOne"/>

    <Button
            android:text="Select Date"
            android:id="@+id/button"
            android:textColor="@color/colorOne"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorFive"
            android:padding="15dp"
            android:layout_marginTop="24dp"/>

<!--Selected Date-->
    <TextView
            android:textSize="24dp"
            android:textColor="@color/colorTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:id="@+id/selectedDate"/>
    <TextView
            android:text="Selected Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:id="@+id/textView2"/>

<!--Age in minutes-->
    <TextView
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/colorTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:id="@+id/ageInMinutes"/>
    <TextView
            android:text="Age in minutes:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:id="@+id/textView4"/>


</LinearLayout>